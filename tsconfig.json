{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "commonjs",             // Express + Node এর জন্য commonjs বা nodenext ব্যবহার করা যায়
    "target": "es2020",               // Modern async/await support
    "lib": ["es2020"],                // Modern JS features
    "types": ["node"],                // Node types

    /* Output & Debugging */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Module Resolution */
    "esModuleInterop": true,          // allow default import for express, mongoose
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

